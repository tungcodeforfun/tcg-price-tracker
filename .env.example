# TCG Price Tracker Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Application Settings
APP_TITLE="TCG Price Tracker"
APP_DESCRIPTION="Pokemon and One Piece TCG price tracking system"
APP_VERSION="0.1.0"
APP_HOST="0.0.0.0"
APP_PORT=8000
APP_DEBUG=true
APP_RELOAD=true
APP_LOG_LEVEL="DEBUG"
APP_LOG_FORMAT="json"

# CORS Settings
APP_ALLOW_ORIGINS=["http://localhost:3000", "http://localhost:8000"]
APP_ALLOW_CREDENTIALS=true
APP_ALLOW_METHODS=["*"]
APP_ALLOW_HEADERS=["*"]

# Database Settings
DB_HOST="localhost"
DB_PORT=5432
DB_NAME="tcgtracker"
DB_USER="tcgtracker"
DB_PASSWORD="your_secure_password_here"

# Read Replica Settings (optional)
DB_READ_HOST=""
DB_READ_PORT=5432

# Database Pool Settings
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=0
DB_POOL_TIMEOUT=30

# Redis Settings
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=""
REDIS_MAX_CONNECTIONS=20
REDIS_SOCKET_TIMEOUT=30
REDIS_DEFAULT_TTL=300

# Celery Settings
CELERY_BROKER_URL="redis://localhost:6379/1"
CELERY_RESULT_BACKEND="redis://localhost:6379/2"
CELERY_TASK_SERIALIZER="json"
CELERY_RESULT_SERIALIZER="json"
CELERY_ACCEPT_CONTENT=["json"]
CELERY_TIMEZONE="UTC"
CELERY_ENABLE_UTC=true
CELERY_WORKER_PREFETCH_MULTIPLIER=1
CELERY_TASK_ACKS_LATE=true
CELERY_WORKER_MAX_TASKS_PER_CHILD=1000

# Security Settings
SECURITY_SECRET_KEY="change_this_to_a_secure_random_string_at_least_32_characters_long"
SECURITY_ALGORITHM="HS256"
SECURITY_ACCESS_TOKEN_EXPIRE_MINUTES=60
SECURITY_REFRESH_TOKEN_EXPIRE_DAYS=30
SECURITY_API_KEY_LENGTH=32
SECURITY_PASSWORD_HASH_SCHEMES=["bcrypt"]

# TCGPlayer API Settings
API_TCGPLAYER_CLIENT_ID="your_tcgplayer_client_id"
API_TCGPLAYER_CLIENT_SECRET="your_tcgplayer_client_secret"
API_TCGPLAYER_AUTH_CODE="your_tcgplayer_authorization_code"
API_TCGPLAYER_BASE_URL="https://api.tcgplayer.com"
API_TCGPLAYER_RATE_LIMIT=300

# eBay API Settings
API_EBAY_CLIENT_ID="your_ebay_client_id"
API_EBAY_CLIENT_SECRET="your_ebay_client_secret"
API_EBAY_BASE_URL="https://api.ebay.com"
API_EBAY_RATE_LIMIT=1000

# Development Settings (remove in production)
# These are used for testing and development
DEV_CREATE_SAMPLE_DATA=true
DEV_MOCK_EXTERNAL_APIS=false
DEV_LOG_SQL_QUERIES=false

# Production Settings (set these in production)
# SENTRY_DSN="your_sentry_dsn_for_error_tracking"
# NEW_RELIC_LICENSE_KEY="your_new_relic_license_key"
# DATADOG_API_KEY="your_datadog_api_key"