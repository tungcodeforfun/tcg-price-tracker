# TCG Price Tracker - Environment Configuration Template
# Copy this file to .env and replace placeholder values with your actual configuration

# Application Settings
APP_DEBUG=true
APP_RELOAD=true
APP_LOG_LEVEL="DEBUG"
APP_HOST="0.0.0.0"
APP_PORT=8000

# Security Settings
# IMPORTANT: Generate a secure secret key for production using:
# python -c "import secrets; print(secrets.token_urlsafe(32))"
SECURITY_SECRET_KEY="INSECURE_PLACEHOLDER_GENERATE_NEW_KEY_FOR_PRODUCTION"

# Database Settings
DB_HOST="localhost"
DB_PORT=5432
DB_NAME="tcgtracker"
DB_USER="tcgtracker"
DB_PASSWORD="PLACEHOLDER_CHANGE_THIS_PASSWORD"

# Redis Settings
REDIS_HOST="localhost"
REDIS_PORT=6379

# Celery Settings
CELERY_BROKER_URL="redis://localhost:6379/1"
CELERY_RESULT_BACKEND="redis://localhost:6379/2"

# API Keys - Replace with your actual API credentials
# JustTCG API key - HIGHLY RECOMMENDED for production
# Free tier: 100 requests/day (~4/hour sustainable)
# With API key: 1000 requests/day (~40/minute sustainable)
# Get your API key from: https://justtcg.com/api/dashboard
API_JUSTTCG_API_KEY=""  # Recommended - 10x higher rate limits with API key

# eBay API Configuration
# Set to "sandbox" for testing or "production" for live environment
API_EBAY_ENVIRONMENT="sandbox"

# eBay Production Credentials (for live environment)
API_EBAY_CLIENT_ID=""  # Required for production - Get from https://developer.ebay.com
API_EBAY_CLIENT_SECRET=""  # Required for production

# eBay Sandbox Credentials (for testing)
# Get sandbox keys from https://developer.ebay.com
API_EBAY_SANDBOX_CLIENT_ID=""  # Optional - For sandbox testing
API_EBAY_SANDBOX_CLIENT_SECRET=""  # Optional - For sandbox testing

# PriceCharting API Configuration
API_PRICECHARTING_API_KEY=""  # Get from https://www.pricecharting.com/api-documentation
API_PRICECHARTING_RATE_LIMIT=60  # Requests per minute (adjust based on your API plan)