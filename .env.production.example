# TCG Price Tracker - Production Environment Configuration Template
# Copy this file to .env.production and replace with actual production values
# CRITICAL: All values marked as REQUIRED must be set for production deployment

# Application Settings
APP_DEBUG=false
APP_RELOAD=false
APP_LOG_LEVEL="INFO"
APP_HOST="0.0.0.0"
APP_PORT=8000
APP_ENV="production"

# Security Settings - REQUIRED
# Generate using: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECURITY_SECRET_KEY="REQUIRED_GENERATE_UNIQUE_32_CHAR_SECRET_FOR_PRODUCTION"

# Database Settings - Primary - REQUIRED
DB_HOST="REQUIRED_production_db_host"
DB_PORT=5432
DB_NAME="tcgtracker_prod"
DB_USER="REQUIRED_production_db_user"
DB_PASSWORD="REQUIRED_production_db_password"
DATABASE_URL="postgresql+asyncpg://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}"

# Database Settings - Read Replica (Optional)
DB_REPLICA_HOST="production_db_replica_host"
DB_REPLICA_PORT=5432
DATABASE_REPLICA_URL="postgresql+asyncpg://${DB_USER}:${DB_PASSWORD}@${DB_REPLICA_HOST}:${DB_REPLICA_PORT}/${DB_NAME}"

# Redis Settings - REQUIRED
REDIS_HOST="REQUIRED_production_redis_host"
REDIS_PORT=6379
REDIS_PASSWORD="REQUIRED_production_redis_password"
REDIS_URL="redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/0"

# Celery Settings - REQUIRED
CELERY_BROKER_URL="redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/1"
CELERY_RESULT_BACKEND="redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/2"

# External API Keys
API_JUSTTCG_API_KEY=""  # Optional for free tier, paid plans available for higher limits
API_EBAY_CLIENT_ID="REQUIRED_production_ebay_client_id"
API_EBAY_CLIENT_SECRET="REQUIRED_production_ebay_secret"

# PriceCharting API Configuration
API_PRICECHARTING_API_KEY="${PRICECHARTING_API_KEY}"  # Required for PriceCharting integration
API_PRICECHARTING_RATE_LIMIT=60  # Requests per minute (adjust based on your API plan)

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT="100/hour"
RATE_LIMIT_TCGPLAYER="1800/hour"
RATE_LIMIT_EBAY="1000/hour"
RATE_LIMIT_PRICECHARTING="3600/hour"  # 60 requests/minute

# CORS Configuration
CORS_ORIGINS='["https://yourdomain.com","https://www.yourdomain.com"]'
CORS_ALLOW_CREDENTIALS=true

# Cache Configuration (seconds)
CACHE_TTL_SEARCH=900
CACHE_TTL_PRICES=300
CACHE_TTL_USER_PROFILE=1800
CACHE_TTL_TCG_SETS=3600

# Monitoring Configuration (Optional but Recommended)
SENTRY_DSN="your_sentry_dsn_for_error_tracking"
PROMETHEUS_ENABLED=true
METRICS_PORT=9090

# SSL/TLS Configuration
SSL_REDIRECT=true
SECURE_COOKIES=true

# Health Check Configuration
HEALTH_CHECK_PATH="/health"
READINESS_CHECK_PATH="/ready"